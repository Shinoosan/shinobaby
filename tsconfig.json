{
  "compilerOptions": {
    "target": "ES2022", // Upgrade to ES2022 for better async/await and class features
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // Update to ES2022 for modern features
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Type Checking & Linting */
    "strict": true,
    "exactOptionalPropertyTypes": true, // Ensures precise optional property behavior
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true, // Ensures overridden methods are explicitly marked
    "noImplicitReturns": true, // Prevents missing return statements
    "noPropertyAccessFromIndexSignature": true, // Safer property access

    /* shadcn/UI Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
